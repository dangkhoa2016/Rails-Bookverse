<%= form_with(model: publisher, class: 'model-form mt-4', novalidate: true) do |form| %>
  <%= render 'shared/error_messages', record: publisher %>

  <div class='mb-3'>
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :address, class: 'form-label' %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :phone_number, class: 'form-label' %>
    <%= form.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :established_year, class: 'form-label' %>
    <%= form.number_field :established_year, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :website, class: 'form-label' %>
    <%= form.text_field :website, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :ceo_name, class: 'form-label' %>
    <%= form.text_field :ceo_name, class: 'form-control' %>
  </div>

  <div class='mb-3 form-check'>
    <%= form.check_box :active, class: 'form-check-input' %>
    <%= form.label :active, class: 'form-check-label' %>
  </div>

  <div>
    <%= form.submit translate('actions.save'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'shared/footer_actions', record: publisher %>
