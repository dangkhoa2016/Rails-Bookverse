<div id='<%= dom_id author %>' class='card mt-3'>
  <div class='card-header border-success border-top border-bottom-0 border-4'>
    <h2 class='mb-0'><%= author.full_name %></h2>
  </div>

  <div class='card-body'>
    <p>
      <strong>First name:</strong>
      <%= author.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= author.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= author.email %>
    </p>

    <p>
      <strong>Active:</strong>
      <%= author.active %>
    </p>
  </div>

  <%= render 'shared/footer_actions', record: author %>
</div>
