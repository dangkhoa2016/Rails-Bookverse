    <h4 class='mb-0'><%= author.full_name %></h4>
  </div>

  <div class='card-body row row-cols-1'>
    <%= render 'shared/display_fields', record: author %>
  </div>

  <%= render 'shared/footer_actions', record: author %>
</div>
