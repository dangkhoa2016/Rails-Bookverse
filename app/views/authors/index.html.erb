<%= render 'shared/result_messages', record: @author %>

<h1>Authors</h1>

<div id='authors'>
  <% @authors.each do |author| %>
    <%= render author %>
    <p>
      <%= link_to 'View', author %>
      <%= link_to 'Edit', edit_author_path(author) %>
    </p>
  <% end %>
</div>

<%= link_to 'New author', new_author_path %>
