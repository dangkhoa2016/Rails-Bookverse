<div id='<%= dom_id book_loan %>' class='card mt-3'>
  <div class='card-header border-warning border-top border-bottom-0 border-4'>
    <h2 class='mb-0'><%= book_loan.book&.title %></h2>
  </div>

  <div class='card-body'>
    <p>
      <strong>Borrowed on:</strong>
      <%= book_loan.borrowed_on %>
    </p>

    <p>
      <strong>Returned on:</strong>
      <%= book_loan.returned_on %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= book_loan.status %>
    </p>

    <p>
      <strong>Member:</strong>
      <%= book_loan.member&.full_name %>
    </p>

    <p>
      <strong>Member ID:</strong>
      <%= book_loan.member_id %>
    </p>

    <p>
      <strong>Book ID:</strong>
      <%= book_loan.book_id %>
    </p>

    <p>
      <strong>Active:</strong>
      <%= book_loan.active %>
    </p>
  </div>

  <%= render 'shared/footer_actions', record: book_loan %>
</div>
