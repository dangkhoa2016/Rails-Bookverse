<div class='card p-4'>
  <%
    records = instance_variable_get("@#{controller_name}")
    model = controller_name.singularize.classify.constantize rescue nil
  %>
  <div class='table-responsive'>
    <table class='table table-hover table-striped mb-0'>
      <thead>
        <tr>
          <% model.column_names.each do |column| %>
            <th class='text-nowrap'><%= model.human_attribute_name(column) %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% records.each do |record| %>
          <tr>
            <% model.column_names.each do |column| %>
              <td class=''>
                <% if column == 'id' %>
                  <%= link_to record.id, record %>
                <% else %>
                  <%= render_field(column, record) %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
