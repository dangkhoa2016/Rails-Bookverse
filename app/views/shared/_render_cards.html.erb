<div class='py-4'>
  <div class='row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xxl-4 g-4'>
    <% instance_variable_get("@#{controller_name}").each do |record| %>
      <div class='col'>
        <%= render "#{controller_name}/#{controller_name.singularize}", controller_name.singularize.to_sym => record %>
      </div>
    <% end %>
  </div>
</div>
