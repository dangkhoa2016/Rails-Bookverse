<%= form_with(model: member, class: 'model-form mt-4', novalidate: true) do |form| %>
  <%= render 'shared/error_messages', record: member %>

  <div class='mb-3'>
    <%= form.label :first_name, class: 'form-label' %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :last_name, class: 'form-label' %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :library_id, class: 'form-label' %>
    <%= form.text_field :library_id, class: 'form-control' %>
  </div>

  <div class='mb-3 form-check'>
    <%= form.check_box :active, class: 'form-check-input' %>
    <%= form.label :active, class: 'form-check-label' %>
  </div>

  <div>
    <%= form.submit translate('actions.save'), class: 'btn btn-primary' %>
  </div>
<% end %>
