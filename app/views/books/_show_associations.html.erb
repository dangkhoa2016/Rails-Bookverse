<hr class='mt-4'>

<div data-controller='tabs' class='mt-3'>
  <div class='border border-primary p-2 rounded'>
    <h3 class='mb-3'><%= translate('ui.associations') %></h3>

    <ul class='nav nav-pills'>
      <li class='nav-item'>
        <a class='nav-link active'
          data-coreui-target='#book-loans-tab-pane'
          type='button' role='tab'
          data-url='<%= by_book_book_loans_path(book_id: record.id) %>'
          aria-controls='book-loans-tab-pane'
          aria-selected='true'>
          <%= record.class.human_attribute_name(:book_loans) %>
        </a>
      </li>
      <li class='nav-item'>
        <a class='nav-link'
          data-coreui-target='#authors-tab-pane'
          data-url='<%= by_book_authors_path(book_id: record.id) %>'
          type='button' role='tab'
          aria-controls='authors-tab-pane'>
          <%= record.class.human_attribute_name(:authors) %>
        </a>
      </li>
      <li class='nav-item'>
        <a class='nav-link'
          data-coreui-target='#published-dates-tab-pane'
          data-url='<%= by_book_published_dates_path(book_id: record.id) %>'
          type='button' role='tab'
          aria-controls='published-dates-tab-pane'>
          <%= record.class.human_attribute_name(:published_dates) %>
        </a>
      </li>
      <li class='nav-item'>
        <a class='nav-link'
          data-coreui-target='#reviews-tab-pane'
          data-url='<%= by_book_reviews_path(book_id: record.id) %>'
          type='button' role='tab'
          aria-controls='reviews-tab-pane'>
          <%= record.class.human_attribute_name(:reviews) %>
        </a>
      </li>
    </ul>
  </div>

  <div class='tab-content mt-3' id='book-tab-content'>
    <div class='tab-pane fade show active' id='book-loans-tab-pane'
      role='tabpanel' aria-labelledby='book-loans-tab' tabindex='0'></div>
    <div class='tab-pane fade' id='authors-tab-pane'
      role='tabpanel' aria-labelledby='authors-tab' tabindex='0'></div>
    <div class='tab-pane fade' id='published-dates-tab-pane'
      role='tabpanel' aria-labelledby='published-dates-tab' tabindex='0'></div>
    <div class='tab-pane fade' id='reviews-tab-pane'
      role='tabpanel' aria-labelledby='reviews-tab' tabindex='0'></div>
  </div>
</div>
