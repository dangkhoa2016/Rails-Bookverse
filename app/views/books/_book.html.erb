<div id='<%= dom_id book %>' class='card mt-3'>
  <div class='card-header border-info border-top border-bottom-0 border-4'>
    <h4 class='mb-0'><%= book.title %></h4>
  </div>

  <div class='card-body'>
    <p>
      <strong>Summary:</strong>
      <%= book.summary %>
    </p>

    <p>
      <strong>Isbn:</strong>
      <%= book.isbn %>
    </p>

    <p>
      <strong>Pages:</strong>
      <%= book.pages %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= book.price %>
    </p>

    <p>
      <strong>Stock:</strong>
      <%= book.stock %>
    </p>

    <p>
      <strong>Active:</strong>
      <%= book.active %>
    </p>
  </div>
</div>

<%= render 'shared/footer_actions', record: book %>
