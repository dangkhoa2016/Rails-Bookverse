<%= form_with(model: book, class: 'model-form mt-4', novalidate: true) do |form| %>
  <%= render 'shared/error_messages', record: book %>

  <div class='mb-3'>
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :summary, class: 'form-label' %>
    <%= form.text_area :summary, class: 'form-control', rows: 5 %>
  </div>

  <div class='mb-3'>
    <%= form.label :isbn, class: 'form-label' %>
    <%= form.text_field :isbn, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :pages, class: 'form-label' %>
    <%= form.number_field :pages, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :price, class: 'form-label' %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :stock, class: 'form-label' %>
    <%= form.number_field :stock, class: 'form-control' %>
  </div>

  <div class='mb-3 form-check'>
    <%= form.check_box :active, class: 'form-check-input' %>
    <%= form.label :active, class: 'form-check-label' %>
  </div>

  <div>
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
