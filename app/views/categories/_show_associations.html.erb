<hr class='mt-4'>

<div data-controller='tabs' class='mt-3'>
  <div class='border border-primary p-2 rounded'>
    <h3 class='mb-3'><%= translate('ui.associations') %></h3>

    <ul class='nav nav-pills'>
      <li class='nav-item'>
        <a class='nav-link active'
          data-coreui-target='#books-tab-pane'
          data-url='<%= by_category_books_path(category_id: record.id) %>'
          type='button' role='tab'
          aria-controls='books-tab-pane'
          aria-selected='true'>
          <%= record.class.human_attribute_name(:books) %>
        </a>
      </li>
    </ul>
  </div>

  <div class='tab-content mt-3' id='category-tab-content'>
    <div class='tab-pane fade show active' id='books-tab-pane'
      role='tabpanel' aria-labelledby='books-tab' tabindex='0'></div>
  </div>
</div>
