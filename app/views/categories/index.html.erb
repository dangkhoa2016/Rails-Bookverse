<%= render 'shared/result_messages', record: @category %>

<h1>Categories</h1>

<div id='categories'>
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to 'View', category %>
      <%= link_to 'Edit', edit_category_path(category) %>
    </p>
  <% end %>
</div>

<%= link_to 'New category', new_category_path %>
