<%= form_with(model: published_date, class: 'model-form mt-4', novalidate: true) do |form| %>
  <%= render 'shared/error_messages', record: published_date %>

  <div class='mb-3'>
    <%= form.label :book_id, class: 'form-label' %>
    <%= form.text_field :book_id, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :publisher_id, class: 'form-label' %>
    <%= form.text_field :publisher_id, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.label :published_date, class: 'form-label' %>
    <%= form.date_field :published_date %>
  </div>

  <div class='mb-3'>
    <%= form.label :edition, class: 'form-label' %>
    <%= form.text_field :edition, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
