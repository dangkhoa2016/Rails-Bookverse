<header class='header header-sticky p-0 mb-4'>
  <div class='container-fluid border-bottom px-4'>
    <button class='header-toggler' type='button'
      onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()"
      style='margin-inline-start: -14px;'>
      <svg class='icon icon-lg'>
        <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-menu'></use>
      </svg>
    </button>
    <ul class='header-nav d-flex'>
      <% I18n.available_locales.each do |locale| %>
        <% current_locale = I18n.locale.to_s == locale.to_s %>
        <% url = current_locale ? '#' : locale_switch_url(locale) %>
        <li class='nav-item<%= current_locale ? ' bg-info' : '' %>'>
          <%= link_to url, class: 'nav-link align-items-center d-flex',
            title: translate("locale.#{locale}") do %>
            <svg class='icon icon-lg'>
              <use xlink:href='<%= asset_path("coreui-flag.svg") %>#cif-<%= locale.to_s == "vi" ? "vn" : "us" %>'></use>
            </svg>
          <% end %>
        </li>
      <% end %>
    </ul>
    <ul class='header-nav ms-auto'>
      <li class='nav-item'>
        <a class='nav-link align-items-center d-flex' href='#' title='<%= translate("ui.notifications.title") %>'>
          <svg class='icon icon-lg'>
            <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-bell'></use>
          </svg>
        </a>
      </li>
      <li class='nav-item'>
        <a class='nav-link align-items-center d-flex' href='#' title='<%= translate("ui.tasks.title") %>'>
          <svg class='icon icon-lg'>
            <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-list-rich'></use>
          </svg>
        </a>
      </li>
      <li class='nav-item'>
        <a class='nav-link align-items-center d-flex' href='#'>
          <svg class='icon icon-lg'>
            <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-envelope-open'></use>
          </svg>
        </a>
      </li>
    </ul>
    <ul class='header-nav'>
      <li class='nav-item align-items-center d-flex py-1'>
        <div class='vr h-100 mx-2 text-body text-opacity-75'></div>
      </li>
      <li class='nav-item align-items-center d-flex dropdown' title='<%= translate("ui.themes.title") %>'>
        <button class='btn btn-link nav-link py-2 px-2 d-flex align-items-center' type='button' aria-expanded='false' data-coreui-toggle='dropdown'>
          <svg class='icon icon-lg theme-icon-active'>
            <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-contrast'></use>
          </svg>
        </button>
        <ul class='dropdown-menu dropdown-menu-end' style='--cui-dropdown-min-width: 8rem;'>
          <li>
            <button class='dropdown-item d-flex align-items-center' type='button' data-coreui-theme-value='light'>
              <svg class='icon icon-lg me-3'>
                <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-sun'></use>
              </svg>
              <%= translate('ui.themes.light') %>
            </button>
          </li>
          <li>
            <button class='dropdown-item d-flex align-items-center' type='button' data-coreui-theme-value='dark'>
              <svg class='icon icon-lg me-3'>
                <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-moon'></use>
              </svg>
              <%= translate('ui.themes.dark') %>
            </button>
          </li>
          <li>
            <button class='dropdown-item d-flex align-items-center active' type='button' data-coreui-theme-value='auto'>
              <svg class='icon icon-lg me-3'>
                <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-contrast'></use>
              </svg>
              <%= translate('ui.themes.auto') %>
            </button>
          </li>
        </ul>
      </li>
      <li class='nav-item align-items-center d-flex py-1'>
        <div class='vr h-100 mx-2 text-body text-opacity-75'></div>
      </li>
      <li class='nav-item dropdown'>
        <a class='nav-link py-0 pe-0' data-coreui-toggle='dropdown' href='#' role='button' aria-haspopup='true' aria-expanded='false'>
          <div class='avatar avatar-md'>
            <%= image_tag(asset_path('avatars/8.jpg'), class: 'avatar-img', alt: 'user@email.com') %>
          </div>
        </a>
        <div class='dropdown-menu dropdown-menu-end pt-0'>
          <div class='dropdown-header bg-body-tertiary text-body-secondary fw-semibold rounded-top mb-2'>
            <%= translate('ui.activities.title') %>
          </div>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-bell'></use>
            </svg>
            Updates <span class='badge badge-sm bg-info ms-2'>42</span>
          </a>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-envelope-open'></use>
            </svg>
            Messages <span class='badge badge-sm bg-success ms-2'>42</span>
          </a>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-task'></use>
            </svg>
            Tasks <span class='badge badge-sm bg-danger ms-2'>42</span>
          </a>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-comment-square'></use>
            </svg>
            Comments <span class='badge badge-sm bg-warning ms-2'>42</span>
          </a>
          <div class='dropdown-header bg-body-tertiary text-body-secondary fw-semibold my-2'>
            <div class='fw-semibold'><%= translate('ui.accounts.title') %></div>
          </div>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-user'></use>
            </svg>
            <%= translate('ui.accounts.profile') %>
          </a>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-settings'></use>
            </svg>
            <%= translate('ui.accounts.settings') %>
          </a>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-credit-card'></use>
            </svg>
            Payments <span class='badge badge-sm bg-secondary ms-2'>42</span>
          </a>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-file'></use>
            </svg>
            Projects <span class='badge badge-sm bg-primary ms-2'>42</span>
          </a>
          <div class='dropdown-divider'></div>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-lock-locked'></use>
            </svg>
            Lock Account
          </a>
          <a class='dropdown-item' href='#'>
            <svg class='icon me-2'>
              <use xlink:href='<%= asset_path("coreui-free.svg") %>#cil-account-logout'></use>
            </svg>
            <%= translate('actions.sign_out') %>
          </a>
        </div>
      </li>
    </ul>
  </div>
</header>

<div class='container-fluid px-4 bg-body d-flex align-items-center mb-2' style='height: 3rem'>
  <nav aria-label='breadcrumb'>
    <ol class='breadcrumb my-0'>
      <li class='breadcrumb-item'>
        <%= link_to translate('ui.home'), root_path %>
      </li>
      <% if action_name == 'index' %>
        <% if controller_name == 'home' %>
          <li class='breadcrumb-item active'>
            <span>
              <%= translate('ui.sidebar_menu.dashboard') %>
            </span>
          </li>
        <% else %>
          <li class='breadcrumb-item'>
            <span>
              <%= translate("ui.sidebar_menu.#{controller_name}") %>
            </span>
          </li>
          <li class='breadcrumb-item active'>
            <span>
              <%= translate("ui.controller_actions.#{action_name}") %>
            </span>
          </li>
        <% end %>
      <% else %>
        <li class='breadcrumb-item'>
          <%= link_to translate("ui.sidebar_menu.#{controller_name}"), controller: controller_name %>
        </li>
        <li class='breadcrumb-item active'>
          <span>
            <%= translate("ui.controller_actions.#{action_name}") %>
          </span>
        </li>
      <% end %>
    </ol>
  </nav>
</div>
